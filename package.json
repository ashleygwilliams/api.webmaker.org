{
  "name": "api.webmaker.org",
  "version": "0.0.0",
  "description": "Services for Webmaker",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "npm run test:api && npm run lint",
    "test:api": "lab --verbose --colors --assert code --timeout 5000",
    "lint": "npm run jshint && npm run jscs",
    "jshint": "jshint -c node_modules/mofo-style/linters/.jshintrc adapters lib services test server.js",
    "jscs": "jscs -c node_modules/mofo-style/linters/.jscsrc adapters lib services test server.js"
  },
  "author": "Mozilla Foundation",
  "license": "MPL 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/api.webmaker.org"
  },
  "dependencies": {
    "blankie": "^1.1.0",
    "boom": "^2.6.1",
    "habitat": "^3.1.2",
    "hapi": "^8.4.0",
    "hoek": "^2.11.0",
    "joi": "^6.0.8",
    "lout": "^6.2.2",
    "object-assign": "^2.0.0",
    "replify": "^1.2.0",
    "scooter": "^2.0.1"
  },
  "devDependencies": {
    "code": "^1.3.0",
    "jscs": "^1.11.3",
    "jshint": "^2.6.3",
    "lab": "^5.5.0",
    "mofo-style": "latest"
  },
  "engines": {
    "npm": "^2.5.1",
    "node": "^0.12.1"
  }
}
